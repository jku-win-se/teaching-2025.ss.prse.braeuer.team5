<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jku.se.Controller.UserDashboardController">

    <top>
        <TextField prefHeight="73.0" prefWidth="600.0" style="-fx-background-color:lightblue;" text="Dashboard" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
    </top>


    <left>
        <VBox prefHeight="171.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Button accessibleRole="IMAGE_VIEW" mnemonicParsing="false" onAction="#handleEditInvoiceUser" prefHeight="46.0" prefWidth="100.0" text="Edit invoice" textAlignment="CENTER" wrapText="true" />
                <Button accessibleRole="IMAGE_VIEW" mnemonicParsing="false" onAction="#handleUploadInvoice" prefHeight="46.0" prefWidth="100.0" text="Upload invoice" textAlignment="CENTER" wrapText="true" />
