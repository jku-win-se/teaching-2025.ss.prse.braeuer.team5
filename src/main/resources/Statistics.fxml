<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jku.se.Controller.StatisticsController">
    <children>
        <TextField prefHeight="73.0" prefWidth="600.0" style="-fx-background-color: lightblue;" text="Statistics">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <SplitPane dividerPositions="0.29797979797979796" layoutX="-4.0" layoutY="78.0" prefHeight="271.0" prefWidth="600.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="269.0" prefWidth="192.0">
                    <children>
                        <Text layoutX="14.0" layoutY="19.0" text="Select statistic:" />

                        <RadioButton fx:id="InvoicesRadioButton" layoutX="16.0" layoutY="29.0" mnemonicParsing="false" onAction="#statisticNumberInvoicesPerMonth" prefHeight="40.0" prefWidth="153.0" text="Number of invoices per month" wrapText="true">
                     <toggleGroup>
                        <ToggleGroup fx:id="statisticsToggleGroup" />
                     </toggleGroup></RadioButton>

                        <RadioButton fx:id="distributionRadioButton" layoutX="16.0" layoutY="69.0" mnemonicParsing="false" onAction="#statisticDistributionRestaurantSupermarket" prefHeight="40.0" prefWidth="153.0" text="Distribution restaurant or supermarket" toggleGroup="$statisticsToggleGroup" wrapText="true" />

                        <RadioButton fx:id="reimbursementRadioButton" layoutX="16.0" layoutY="109.0" mnemonicParsing="false" onAction="#statisticReimbursementPerMonth" prefHeight="34.0" prefWidth="153.0" text="Reimbursement per month" toggleGroup="$statisticsToggleGroup" wrapText="true" />

                        <Text layoutX="12.0" layoutY="172.0" text="Average number of invoices per user per month:" wrappingWidth="164.529296875" />
                        <Text fx:id="TextFieldAverageInvoices" layoutX="19.0" layoutY="206.0">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Text>

                        <Text layoutX="11.0" layoutY="232.0" text="Total refund (last 12 months):" />
                        <Text fx:id="TextFieldTotalRefund" layoutX="19.0" layoutY="249.0">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Text>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <BarChart fx:id="barChart" layoutY="-3.0" prefHeight="271.0" prefWidth="401.0">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" />
                            </yAxis>
                        </BarChart>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>

        <ComboBox fx:id="saveFormatComboBox" layoutX="85.0" layoutY="361.0" prefWidth="143.0" />
        <Text layoutX="29.0" layoutY="378.0" text="Save as:" />

        <Button layoutX="246.0" layoutY="361.0" prefWidth="100.0" style="-fx-background-color: grey; -fx-text-fill: white; -fx-font-weight: bold;" text="Save" />
        <Button layoutX="496.0" layoutY="361.0" onAction="#cancelStatistics" prefWidth="100.0" style="-fx-background-color: grey; -fx-text-fill: white; -fx-font-weight: bold;" text="Exit" />
    </children>
</AnchorPane>
