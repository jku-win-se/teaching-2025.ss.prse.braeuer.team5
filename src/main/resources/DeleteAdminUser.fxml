<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jku.se.Controller.DeleteAdminUserController">


    <!-- Titel -->
    <Label layoutX="234.0" layoutY="44.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-alignment: CENTER;" text="Delete Admin/User" />

    <!-- Type Admin/User -->
    <Label layoutX="157.0" layoutY="144.0" text="Type:" />
    <ChoiceBox fx:id="type" layoutX="272.0" layoutY="140.0" prefHeight="25.0" prefWidth="204.0" />
    <!-- E-Mail -->
    <Label layoutX="157.0" layoutY="192.0" text="E-Mail:" />
    <ChoiceBox fx:id="email" layoutX="272.0" layoutY="188.0" prefHeight="25.0" prefWidth="204.0" />

    <!-- Accept delete -->
    <Button layoutX="184.0" layoutY="273.0" onAction="#deleteAdminUser" prefWidth="100.0" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-weight: bold;" text="Delete" textFill="WHITE" />

    <!--exit-->
    <Button layoutX="374.0" layoutY="273.0" onAction="#cancelDeleteAdminUser" prefWidth="100.0" style="-fx-background-color: grey; -fx-text-fill: white; -fx-font-weight: bold;" text="Exit" />
   <Label fx:id="message" layoutX="286.0" layoutY="330.0" />



</AnchorPane>
